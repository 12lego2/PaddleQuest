namespace RPGCharacterManagement
{
    public class Rogue : Character
    {
        public Rogue(string name) : base(name)
        {
            Health = 100;   // Moderate health for Rogue
            AttackPower = 25; // Higher attack power due to agility and critical strikes
        }

        public override void Attack()
        {
            Console.WriteLine($"{Name} strikes from the shadows! Deals {AttackPower} damage.");
        }

        public override void DisplayCharacterInfo()
        {
            Console.WriteLine($"Name: {Name}, Class: Rogue, Health: {Health}, Attack Power: {AttackPower}");
        }
    }
}
