namespace RPGCharacterManagement
{
    public class Mage : Character
    {
        public Mage(string name) : base(name)
        {
            Health = 80;    // Lower health for Mage
            AttackPower = 30; // Higher attack power for magical attacks
        }

        public override void Attack()
        {
            Console.WriteLine($"{Name} casts a fireball! Deals {AttackPower} damage.");
        }

        public override void DisplayCharacterInfo()
        {
            Console.WriteLine($"Name: {Name}, Class: Mage, Health: {Health}, Attack Power: {AttackPower}");
        }
    }
}

