namespace RPGCharacterManagement
{
    public class Warrior : Character
    {
        public Warrior(string name) : base(name)
        {
            Health = 150;   // Higher health for Warrior
            AttackPower = 20; // Medium attack power
        }

        public override void Attack()
        {
            Console.WriteLine($"{Name} attacks with a sword! Deals {AttackPower} damage.");
        }

        public override void DisplayCharacterInfo()
        {
            Console.WriteLine($"Name: {Name}, Class: Warrior, Health: {Health}, Attack Power: {AttackPower}");
        }
    }
}
